<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TatvasoftPrac" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_bold">
        <item name="fontFamily">@font/exo_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_semibold">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="fontFamily">@font/exo_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_medium">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="fontFamily">@font/exo_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_regular">
        <item name="fontFamily">@font/exo_regular</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>